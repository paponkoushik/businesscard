{{ theme['css_scripts'] }}
.unsubscribe-section { 
    margin: 0 !important;
}

.login-form {
    .form-field {
        &:first-child {
            &::before {
                content: "{{ 'METRICALO.EMAIL'|t }} {{ 'METRICALO.ADDRESS'|t }}";
            }
        }

        &:nth-child(2) {
            &::before {
                content: "{{ 'METRICALO.PASSWORD'|t }}";
            }
        }
    }
}