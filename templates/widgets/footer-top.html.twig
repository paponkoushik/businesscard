{% extends 'partials/variables.html.twig' %}

{% set module = page.header.offer %}
{% block render_block %}
	{% set left = page.media[page.find('/home').header.offer.offer_img_left].url ?? '' %}

	{% set left_bg = page.media[page.header.offer.offer_img_bg].url ?? '' %}
	<div class="offer offer_bottom_in_home" style="{% if(left_bg) %}background-image: url('{{ left_bg }}'){% endif %}">
		<div class="container">
			<div class="offer-text">

				{% if left != '' %}
				

					<div class="offer-image" >
						<img class="" src="{{ left }}" alt="icon"/>

						<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="129" height="129" viewBox="0 0 129 129" fill="none">
<rect y="32.8525" width="100.989" height="100.989" transform="rotate(-18.9842 0 32.8525)" fill="url(#pattern0_99_2938)"/>
<defs>
<pattern id="pattern0_99_2938" patternContentUnits="objectBoundingBox" width="1" height="1">
<use xlink:href="#image0_99_2938" transform="scale(0.00666667)"/>
</pattern>
<image id="image0_99_2938" width="150" height="150" preserveAspectRatio="none" xlink:href="data:image/png;base64,"/>
</defs>
</svg>
					</div>
				{% endif %}

				<div class="offer-content"> 
					<h1 class="offer-title">
                        {{ page.find('/home').header.offer.h1.translatable }}
					</h1>

					<p class="">{{ page.find('/home').header.offer.text.translatable }}</p>

					{% for button in module.buttons  %}
						<a class="button " href="{{ button.link }}">

							<span>{{ button.text.translatable|striptags('</br>')|raw }}</span>
							
						</a>
					{% endfor %}

				</div>

				
			</div>

		</div>
	</div>
{% endblock %}
