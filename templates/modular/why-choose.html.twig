{% extends 'partials/variables.html.twig' %}

{% set module = page.header.module %}

{% block render_block %}
    <div class="why_choose">
        <div class="container">
			<div class="why_choose_header">
				{% if module.title %}
					<h3 class="block-title">{{ module.title.translatable|striptags('<span>')|raw }}</h3>
				{% endif %}

                <div class="description">
                    {% if page.content %}
                        <div class="why_choose_description">
                            {{ page.content|raw }}
                        </div>
                    {% endif %}
                </div>

				
			</div>
        </div>

        <div class="why_choose_container container">

            {% for why_choose in page.header.why_choose %}

                <div class="why_choose_card">
                    {% set img_out = page.media[why_choose.image_outside] %}
                    {% set img_out_mobile = page.media[why_choose.image_outside_mobile] %}

                    {% if img_out != '' %}
                        <div class="img_out">
                            <img class="desktop-out-img" src="{{ img_out.url }}"/>
                            <img class="mobile-out-img" src="{{ img_out_mobile.url }}"/>
                        </div>
                    {% endif %}

                    <div class="why_choose_contents">
                        {% set img_in = page.media[why_choose.image_inside] %}
                        {% set img_in_mobile = page.media[why_choose.image_inside_mobile] %}
                        <div class="why_choose_content">
                            {# {% set icon = page.media[why_choose.icon] %} #}
                            <div class="icon_head">
                                {# <img class="icon" src="{{ icon.url }}"/> #}
                                <h4 class="head">{{ why_choose.title.translatable }}</h4>
                            </div>
                            
                            <p class="desc">{{ why_choose.description.translatable }}</p>
                        </div>
                        {% if img_in != '' %}
                            <div class="img_in">
                                <img class="why-choose-desktop-img" src="{{ img_in.url }}"/>
                                <img class="why-choose-mobile-img" src="{{ img_in_mobile.url }}"/>
                            </div>
                         {% endif %}
                    </div>
                </div>
            {% endfor %}

                <div class="why_choose_card_bottom">
                    <div class="bottom_contents">
                        <div class="bottom_content_left">
                            <svg class="left_top" xmlns="http://www.w3.org/2000/svg" width="51" height="51" viewBox="0 0 51 51" fill="none">
                                <path d="M51 1H1V51" stroke="white" stroke-width="2"/>
                            </svg>
                            <svg class="right_top" xmlns="http://www.w3.org/2000/svg" width="51" height="51" viewBox="0 0 51 51" fill="none">
                                <path d="M50 51L50 1L-1.07288e-06 0.999998" stroke="white" stroke-width="2"/>
                            </svg>
                            
                            <div class="center-content">
                                <h5>{{ module.left_bottom_title.translatable|striptags('<span>')|raw }}</h5>
                                <h6>{{ module.left_bottom_sub_title.translatable|striptags('<span>')|raw }}</h6>
                            </div>

                            <svg class="right_bottom" xmlns="http://www.w3.org/2000/svg" width="51" height="51" viewBox="0 0 51 51" fill="none">
                                <path d="M-1.07288e-06 50L50 50L50 -1.07288e-06" stroke="white" stroke-width="2"/>
                            </svg>
                            <svg class="left_bottom" xmlns="http://www.w3.org/2000/svg" width="51" height="51" viewBox="0 0 51 51" fill="none">
                                <path d="M0.999998 -1.07288e-06L1 50L51 50" stroke="white" stroke-width="2"/>
                            </svg>
                        </div>

                        <div class="bottom_content_right">
                            <h4>{{ module.right_bottom_title.translatable|striptags('<span>')|raw }}</h4>
                            <img class="" src="{{ page.media[module.right_bottom_image].url }}"/>
                        </div>
                    </div>

                    <div class="last_contents">
                        <div class="last_content_left">
                            <p>{{ module.last_left_text.translatable|striptags('<span>')|raw }}</p>
                            <div class="last_content_left_bottom">
                                <div class="last_left_image"><img class="" src="{{ page.media[module.last_left_image].url }}"/></div>
                                <img class="" src="{{ page.media[module.last_right_image].url }}"/>
                            </div>
                        </div>
                        <div class="last_content_right">
                            <div class="top">
                                <svg width="79" height="78" viewBox="0 0 79 78" fill="none" xmlns="http://www.w3.org/2000/svg">
