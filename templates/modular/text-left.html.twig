{% extends 'partials/variables.html.twig' %}

{% set module = page.header.text_left %}
{% set image = page.media[page.header.text_left.image] %}
{% set features = page.header.text_left_features %}

{% block render_block %}
<div class="paragraph text-left text-left-animation {{ module.classes }}">
    <div class="container">
        <div class="text-left-container">
            <div class="right-section">
                <img class="" src="{{ image.url }}" alt="icon"/>
                <div class="right-top-content">
                    <p>{{ module.right_top_text.translatable|striptags('<br>')|raw }}</p>
                    <h5>{{ module.right_top_second_text.translatable|striptags('<br>')|raw }}</h3>
                </div>

                <div class="right-bottom">
                    <div class="top-bottom">
                        <h1>{{ module.right_bottom_top_count.translatable|striptags('<br>')|raw }}</h1>
                        <p>{{ module.right_bottom_top_text.translatable|striptags('<br>')|raw }}</p>
                        
                    </div>
                    <div class="top-bottom">
                        <h1>{{ module.right_bottom_count.translatable|striptags('<br>')|raw }}</h1>
                        <p>{{ module.right_bottom_text.translatable|striptags('<br>')|raw }}</p>
                    </div>
                    
                </div>
            </div>

            <div class="text-left-text">
                {# {% if module.subtitle is not empty %}
                <div class="sub-title">
                    <h4>{{ module.subtitle.translatable|striptags('<span>')|raw }}</h4>
                </div>
                {% endif %} #}
                <div class="block-title">
                    <h3>{{ module.title.translatable|striptags('<span>')|raw }}</h3>
                </div>
                <p>{{ page.content|striptags('<span>')|raw }}</p>

                <div class="text-left-list">
                    {% if features is not empty %}
                        {% for feature in features %}
                            <div class="list">
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18" fill="none">
                                    <g clip-path="url(#clip0_67_3196)">
                                        <path d="M9 0C4.0372 0 0 4.0372 0 9C0 13.9628 4.0372 18 9 18C13.9628 18 18 13.9628 18 9C18 4.0372 13.9628 0 9 0Z" fill="#15301F"/>
                                        <path d="M13.5617 7.09272L8.68666 11.9676C8.54041 12.1139 8.34843 12.1875 8.15644 12.1875C7.96445 12.1875 7.77246 12.1139 7.62621 11.9676L5.18876 9.53017C4.89541 9.23697 4.89541 8.76292 5.18876 8.46972C5.48196 8.17637 5.95587 8.17637 6.24921 8.46972L8.15644 10.3769L12.5013 6.03226C12.7945 5.73892 13.2684 5.73892 13.5617 6.03226C13.8549 6.32547 13.8549 6.79937 13.5617 7.09272Z" fill="white"/>
                                    </g>
                                    <defs>
                                        <clipPath id="clip0_67_3196">
                                            <rect width="18" height="18" fill="white"/>
                                        </clipPath>
                                    </defs>
                                </svg>
                                <h6>{{ feature.title.translatable|striptags('<span>')|raw }}</h3>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>

                {% if module.bottom_text is not empty %}
                    <div class="text-left-buttom">
                        <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="30" cy="30" r="30" fill="#15301F"/>
                            <circle cx="30" cy="30" r="29.5" stroke="#15301F" stroke-opacity="0.14"/>
                            <g clip-path="url(#clip0_54_2254)">
                                <path d="M42.5928 34.6916C40.7561 34.6916 38.9527 34.4043 37.2437 33.8395C36.4062 33.5539 35.3768 33.8159 34.8657 34.3409L31.4925 36.8873C27.5805 34.7991 25.1709 32.3902 23.1112 28.5076L25.5827 25.2223C26.2248 24.581 26.4551 23.6443 26.1791 22.7654C25.612 21.0474 25.3238 19.2448 25.3238 17.4073C25.3239 16.0799 24.244 15 22.9166 15H17.4073C16.0799 15 15 16.0799 15 17.4073C15 32.6221 27.378 45 42.5928 45C43.9202 45 45.0001 43.9201 45.0001 42.5927V37.0988C45 35.7715 43.9201 34.6916 42.5928 34.6916Z" fill="white"/>
                            </g>
                            <defs>
                                <clipPath id="clip0_54_2254">
                                    <rect width="30" height="30" fill="white" transform="translate(15 15)"/>
                                </clipPath>
                            </defs>
                        </svg>

                        <div class="buttom-text">
                            <p>{{ module.bottom_text.translatable|striptags('<span>')|raw }}</p>
                            <h6>{{ webdata('support_phone') }}</h6>
                        </div>
                        
                    </div>
                {% endif %}


                

                {# {% if module.buttons %}
                    {% for button in module.buttons  %}
                        <a class="button" href="{{ button.link }}">
                            {{ button.text.translatable }}

                           <svg width="52" height="53" viewBox="0 0 52 53" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect y="0.5" width="52" height="52" rx="26" fill="#FBF9F1"/>
                            <path d="M30.7109 30.2051L32.7476 22.6043L25.1468 20.5677" stroke="#191919" stroke-width="1.6" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M19.252 30.396L32.6126 22.6822" stroke="#191919" stroke-width="1.6" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </a>
                    {% endfor %}
                {% endif %} #}
            </div>
        </div>
    </div>
</div>
{% endblock %}
